# Database (Supabase PostgreSQL)
# Get these from: Supabase Dashboard > Project Settings > Database
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# NextAuth Configuration
AUTH_SECRET="your-auth-secret-key-min-32-chars-here"
AUTH_URL="http://localhost:3000"

# Google OAuth Provider
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Apple OAuth Provider (Optional)
# Create credentials at: https://developer.apple.com/
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_CLIENT_SECRET="your-apple-client-secret"

# SnapTrade API Configuration
# Get credentials at: https://snaptrade.com/
SNAPTRADE_CLIENT_ID="your-snaptrade-client-id"
SNAPTRADE_CONSUMER_KEY="your-snaptrade-consumer-key"

# Application URL (for OAuth callbacks)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Resend Email Provider (for magic link authentication)
# Get API key at: https://resend.com/
RESEND_API_KEY="re_your_resend_api_key"
RESEND_FROM_EMAIL="Your App Name <login@yourdomain.com>"

# Cron Job Authentication
# Generate a random secret: openssl rand -hex 32
CRON_SECRET="your-cron-secret-key"

# Admin Email (for notifications)
ADMIN_EMAIL="admin@yourdomain.com"

# Data Encryption Key (for encrypting sensitive data)
# Generate: openssl rand -hex 32
DATA_ENCRYPTION_KEY="your-64-char-hex-key"

# Upstash Redis (optional - for rate limiting)
# Get credentials at: https://upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"
