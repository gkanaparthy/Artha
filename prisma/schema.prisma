generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                  String          @id @default(cuid())
  name                String?
  email               String?         @unique
  emailVerified       DateTime?
  image               String?
  snapTradeUserId     String?         @unique
  snapTradeUserSecret String?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  accounts            Account[]
  brokerAccounts      BrokerAccount[]
  positionTags        PositionTag[]
  sessions            Session[]
  aiPersona           AiPersona       @default(PROFESSIONAL)
  tagDefinitions      TagDefinition[]
  tradeGroups         TradeGroup[]

  // Subscription fields
  subscriptionStatus    SubscriptionStatus @default(NONE)
  subscriptionPlan      SubscriptionPlan?
  subscriptionTier      SubscriptionTier   @default(REGULAR)

  // Stripe fields
  stripeCustomerId      String?            @unique
  stripeSubscriptionId  String?            @unique
  stripePriceId         String?

  // Trial & billing dates
  trialStartedAt        DateTime?
  trialEndsAt           DateTime?
  currentPeriodStart    DateTime?
  currentPeriodEnd      DateTime?
  cancelledAt           DateTime?

  // Lifetime deal tracking
  lifetimePurchasedAt   DateTime?
  lifetimeAmount        Float?

  // Founder tracking
  isFounder             Boolean            @default(false)
  founderNumber         Int?

  // Grandfathered users (free forever)
  isGrandfathered       Boolean            @default(false)
  grandfatheredAt       DateTime?
  grandfatheredReason   String?

  // Onboarding
  onboardingCompleted   Boolean            @default(false)
  onboardingData        Json?

  // Feature usage tracking
  aiInsightsUsedThisMonth Int              @default(0)
  aiInsightsResetAt     DateTime?

  // Relations for payments and billing
  paymentHistory        PaymentHistory[]
  subscriptionEvents    SubscriptionEvent[]

  @@index([subscriptionStatus])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("auth_accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model BrokerAccount {
  id                 String       @id @default(cuid())
  userId             String
  brokerName         String?
  snapTradeAccountId String       @unique
  accountNumber      String?
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  meta               String?
  authorizationId    String?
  disabled           Boolean      @default(false)
  disabledAt         DateTime?
  disabledReason     String?
  lastCheckedAt      DateTime?
  lastSyncedAt       DateTime?
  user               User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  tradeGroups        TradeGroup[]
  trades             Trade[]

  @@index([userId, disabled])
  @@map("broker_accounts")
}

model Trade {
  id                 String          @id @default(cuid())
  accountId          String
  symbol             String
  universalSymbolId  String?
  quantity           Float
  price              Float
  action             String
  timestamp          DateTime
  fees               Float           @default(0)
  currency           String          @default("USD")
  type               String
  optionType         String?
  strikePrice        Float?
  expiryDate         DateTime?
  optionAction       String?
  contractMultiplier Int             @default(1)
  snapTradeTradeId   String?         @unique
  snapTradeOrderId   String?         @unique
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  positionKey        String?
  groupLegs          TradeGroupLeg[]
  account            BrokerAccount   @relation(fields: [accountId], references: [id])

  @@index([accountId])
  @@index([symbol])
  @@index([timestamp])
  @@index([positionKey])
  @@index([accountId, positionKey])
  @@index([universalSymbolId])
  @@map("trades")
}

model TagDefinition {
  id          String        @id @default(cuid())
  userId      String
  name        String
  description String?
  category    TagCategory
  color       String        @default("#6B7280")
  icon        String?
  isDefault   Boolean       @default(false)
  isArchived  Boolean       @default(false)
  sortOrder   Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  usages      PositionTag[]
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId, category])
  @@index([userId, isArchived])
  @@map("tag_definitions")
}

model PositionTag {
  id              String        @id @default(cuid())
  positionKey     String
  tagDefinitionId String
  userId          String
  createdAt       DateTime      @default(now())
  tagDefinition   TagDefinition @relation(fields: [tagDefinitionId], references: [id], onDelete: Cascade)
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([positionKey, tagDefinitionId])
  @@index([userId, positionKey])
  @@index([tagDefinitionId])
  @@map("position_tags")
}

model TradeGroup {
  id               String          @id @default(cuid())
  userId           String
  name             String?
  strategyType     StrategyType
  underlyingSymbol String
  accountId        String
  openedAt         DateTime
  closedAt         DateTime?
  expirationDate   DateTime?
  netPremium       Float           @default(0)
  realizedPnL      Float           @default(0)
  maxProfit        Float?
  maxLoss          Float?
  autoDetected     Boolean         @default(true)
  confidence       Float?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  legs             TradeGroupLeg[]
  account          BrokerAccount   @relation(fields: [accountId], references: [id])
  user             User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, underlyingSymbol])
  @@index([userId, openedAt])
  @@index([accountId])
  @@index([closedAt])
  @@map("trade_groups")
}

model TradeGroupLeg {
  id             String     @id @default(cuid())
  groupId        String
  tradeId        String
  legNumber      Int
  legType        String
  strikePrice    Float?
  expirationDate DateTime?
  quantity       Int
  entryPrice     Float
  exitPrice      Float?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  group          TradeGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  trade          Trade      @relation(fields: [tradeId], references: [id], onDelete: Cascade)

  @@unique([groupId, tradeId])
  @@index([groupId])
  @@index([tradeId])
  @@map("trade_group_legs")
}

enum StrategyType {
  VERTICAL_SPREAD_BULL_CALL
  VERTICAL_SPREAD_BEAR_CALL
  VERTICAL_SPREAD_BULL_PUT
  VERTICAL_SPREAD_BEAR_PUT
  IRON_CONDOR
  IRON_BUTTERFLY
  STRADDLE
  STRANGLE
  COVERED_CALL
  PROTECTIVE_PUT
  CUSTOM
}

enum TagCategory {
  SETUP
  MISTAKE
  EMOTION
  CUSTOM
}
enum AiPersona {
  PROFESSIONAL
  CANDOR
}

// Payment history for audit trail
model PaymentHistory {
  id                  String    @id @default(cuid())
  userId              String
  stripePaymentId     String    @unique
  stripeInvoiceId     String?
  amount              Float
  currency            String    @default("USD")
  status              PaymentStatus
  description         String?
  createdAt           DateTime  @default(now())

  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("payment_history")
}

// Subscription events log
model SubscriptionEvent {
  id              String    @id @default(cuid())
  userId          String
  eventType       String    // e.g., "trial_started", "subscription_created"
  eventData       Json?
  stripeEventId   String?   @unique
  createdAt       DateTime  @default(now())

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventType])
  @@map("subscription_events")
}

enum SubscriptionStatus {
  NONE           // Never subscribed
  TRIALING       // In free trial
  ACTIVE         // Paying subscriber
  PAST_DUE       // Payment failed, grace period
  CANCELLED      // Cancelled, access until period end
  EXPIRED        // Subscription ended
  LIFETIME       // Lifetime deal purchased
  GRANDFATHERED  // Free forever (early supporters)
}

enum SubscriptionPlan {
  MONTHLY
  ANNUAL
  LIFETIME
}

enum SubscriptionTier {
  FOUNDER   // $12/mo or $99 lifetime
  REGULAR   // $20/mo or $149+ lifetime
}

enum PaymentStatus {
  SUCCEEDED
  FAILED
  REFUNDED
  PENDING
}
